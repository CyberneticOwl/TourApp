<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tourbackground"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tint="#4D000000"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Tour"
            android:layout_marginLeft="5dp"
            android:id="@+id/generatetitle"
            android:paddingTop="20dp"
            android:layout_marginTop="160dp"
            android:textColor="#fff"
            android:textSize="40dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Create a tour based on your preferences"
            android:layout_below="@id/generatetitle"
            android:textColor="#fff"
            android:textSize="15dp"
            />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/createbackground"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:tint="#4D000000"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create A Tour"
                android:layout_marginLeft="5dp"
                android:id="@+id/createtitle"
                android:paddingTop="20dp"
                android:layout_marginTop="160dp"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Select locations near you to string together into a tour."
                android:layout_below="@id/createtitle"
                android:textColor="#fff"
                android:textSize="15dp"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>