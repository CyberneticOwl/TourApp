<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:onClick="generateClick">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/tourbackground"
                android:tint="#4D000000" />


            <TextView
                android:id="@+id/generatetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                android:elevation="4dp"
                android:paddingTop="20dp"
                android:text="Generate Tour"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/generatetitle"
                android:layout_marginLeft="5dp"
                android:elevation="4dp"
                android:text="Create a tour based on your preferences"
                android:textColor="#fff"
                android:textSize="15dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="2dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/createbackground"
                android:tint="#4D000000" />


            <TextView
                android:id="@+id/createtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                android:elevation="4dp"
                android:paddingTop="20dp"
                android:text="Create A Tour"
                android:textColor="#fff"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@id/createtitle"
                android:layout_marginLeft="5dp"
                android:elevation="4dp"
                android:text="Select locations near you to string together into a tour."
                android:textColor="#fff"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>